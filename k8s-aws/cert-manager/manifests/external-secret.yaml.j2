metadata:
  name: cloudflare-issuer-token-zamp
  namespace: cert-manager
spec:
  refreshInterval: 1h
  secretStoreRef:
    kind: ClusterSecretStore
    name: gcp-secret-manager
  target:
    deletionPolicy: Retain
    name: cloudflare-issuer-token-zamp
  data:
  - secretKey: api-token
    remoteRef:
      key: cloudflare-issuer-token-zamp