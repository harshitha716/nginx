pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "sample-app"
        AWS_REGION = "us-east-2"
        ECR_REPO_URI = "842675998483.dkr.ecr.us-east-2.amazonaws.com/harshitha"
        GIT_REPO_URL = 'https://github.com/harshitha716/nginx.git'
        GIT_BRANCH = 'main' // Set the branch you want to deploy from
        ECR_REGION = 'us-east-2' // Replace with your AWS region
        AWS_ACCESS_KEY_ID =  'AKIA4IM3HJ4JRD3KTLLL'
        AWS_SECRET_ACCESS_KEY = 'WX5+6wyw+rEuMWiCNCzmNpOgnz4mRH6AyQz4+FJi'
        AWS_DEFAULT_REGION = 'us-east-2'
        ARGOCD_SERVER = 'https://localhost:8080'
        ARGOCD_APP_NAME = 'cicd.com'
        DEPLOYMENT_NAME = 'my-app'
        CONTAINER_NAME = 'my-app'
        IMAGE_TAG = "${GIT_COMMIT}" 
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout([$class: 'GitSCM', 
                    branches: [[name: "*/${GIT_BRANCH}"]], 
                    userRemoteConfigs: [[url: "${GIT_REPO_URL}"]]
                ])
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                script {
                    // Use the correct path now
                    sh 'cd nginx-app && docker build -t ${DOCKER_IMAGE} .'
                    sh 'aws ecr get-login-password --region ${ECR_REGION} | docker login --username AWS --password-stdin ${ECR_REPO_URI}'
                    sh 'docker tag sample-app:latest 842675998483.dkr.ecr.us-east-2.amazonaws.com/harshitha:IMAGE_TAG'
                    sh 'docker push 842675998483.dkr.ecr.us-east-2.amazonaws.com/harshitha:IMAGE_TAG'
                }
            }
        }

        stage('Update Argo CD Application') {
            steps {
                script {
                    // Trigger Argo CD to sync the application with the new image
                    sh "kubectl -n argocd rollout restart deployment <deployment-name> --image=${DOCKER_IMAGE}"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
